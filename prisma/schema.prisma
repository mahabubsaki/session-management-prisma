generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Divisons {
  id           Int    @id @default(autoincrement())
  unique_name  String @unique
  name         String
  nameBn       String
  latitude     Float
  longitude    Float
  population   Int
  area         Float
  density      Float
  literacyRate Float
  website      String
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String
}

